<% include ../partials/header%>

<div class="container">
	<h1 style="text-align:center; margin-top:10px">Edit Comment</h1>
	<div class="row">
		<div style="width:30% ;margin:10px auto;">
			<form action="/campgrounds/<%=camp_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">				
					<div class="form-group">
						<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>" autocomplete="off">
					</div>	
					<div class="form-group">
						<button class="btn btn-default btn-lg btn-block">Submit</button>
					</div>	
			</form>
			<a href="/campgrounds/<%=camp_id%>">Go back</a>
		</div>
	</div>	
</div>


<% include ../partials/footer %>