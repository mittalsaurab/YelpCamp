 <% include ../partials/header%>

<div class="container">
	<h1 style="text-align:center; margin-top:10px">Edit Campground</h1>
	<div class="row">
		<div style="width:30% ;margin:10px auto;">
			<form action="/campgrounds/<%=camp.id%>?_method=PUT" method="POST" class="form-signin">
					
					<div class="form-group">
						<input class="form-control" type="text" name="camp[name]" placeholder="name" value="<%=camp.name%>" autocomplete="off" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="camp[image]" placeholder="url" value="<%=camp.image%>"autocomplete="off" required>
					</div>	
					<div class="form-group">
						<input class="form-control" type="number" name="camp[price]" min="0.1" step="0.1"  value="<%=camp.price%>" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="camp[location]" placeholder="location of camp"  value="<%=camp.location%>" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="camp[description]" value="<%=camp.description%>"placeholder="description" autocomplete="off">
					</div>	
					<div class="form-group">
						<button class="btn btn-default btn-lg btn-block">Update</button>
					</div>	
			</form>
			<a href="/campgrounds<%=camp.id%>">Go back</a>
		</div>
	</div>	
</div>	

<% include ../partials/footer %>