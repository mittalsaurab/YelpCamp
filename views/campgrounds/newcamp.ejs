<% include ../partials/header%>

<div class="container">
	<h1 style="text-align:center; margin-top:10px">Create a new Campground</h1>
	<div class="row">
		<div style="width:30% ;margin:10px auto;">
			<form action="/campgrounds" method="POST" >
					<div class="form-group">
						<input class="form-control" type="text" name="camp[name]" placeholder="name"autocomplete="off" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="camp[image]" placeholder="url" autocomplete="off" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="number" name="camp[price]" min="0.1" step="0.1" placeholder="price per night"  required>
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="camp[location]" placeholder="location of camp"  required>
					</div>	
					<div class="form-group">
						<input class="form-control" type="text" name="camp[description]" placeholder="description" autocomplete="off">
					</div>	
					<div class="form-group">
						<button class="btn btn-default btn-lg btn-block">Add</button>
					</div>	
			</form>
			<a href="/campgrounds">Go back</a>
		</div>
	</div>	
</div>	

<% include ../partials/footer %>